{
  "Version": "2012-10-17",
  "Statement": {
    "Sid": "AllowCloudFrontServicePrincipalReadOnly",
    "Effect": "Allow",
    "Principal": {
      "Service": "cloudfront.amazonaws.com"
    },
    "Action": "s3:GetObject",
    "Resource": "${resource}/*",
    "Condition": {
      "StringEquals": {
        "AWS:SourceArn": "${cloudfront_id}"
      }
    }
  }
}